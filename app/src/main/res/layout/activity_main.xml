<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhxh.android.xbuttonlib.XButton
        android:id="@+id/XButton1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="112dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:text="椭圆形 "
        android:textColor="@android:color/white"
        app:XangleCorner="45dp"
        app:XdefaultColor="@color/colorPrimary"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XsolidColor="@color/colorPrimary"
        app:XstrokeColor="@color/colorPrimary"
        app:XstrokeWidth="1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhxh.android.xbuttonlib.XButton
        android:id="@+id/XButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="68dp"
        android:text="圆形 "
        android:textColor="@android:color/white"
        app:XangleCorner="45dp"
        app:XdefaultColor="@color/colorPrimary"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XstrokeColor="@color/colorPrimary"
        app:XstrokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhxh.android.xbuttonlib.XButton
        android:id="@+id/XButton3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="112dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="140dp"
        android:text="圆角矩形 "
        android:textColor="@android:color/white"
        app:XangleCorner="5dp"
        app:XdefaultColor="@color/colorPrimary"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XstrokeColor="@color/colorPrimary"
        app:XstrokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>